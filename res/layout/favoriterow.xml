<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="#F3F3F5" 
    android:layout_margin="5dp"
    android:paddingBottom="5dp">
 
 	<TextView
    android:id="@+id/favName"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:textSize="25sp"
    android:textColor="#000000">
    </TextView>
    <TextView
    android:id="@+id/favVisited_address"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="8sp"
    android:layout_marginLeft="6dp"
    android:layout_below="@+id/favName"
    android:textColor="#000000">
    </TextView>
	<RatingBar android:id="@+id/ratingbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:layout_below="@+id/favVisited_address"
        android:stepSize="1.0">
    </RatingBar>
    <Button
    android:id="@+id/favContactButton"
    android:text="Call"
    android:background="@layout/rounded_corner"
    android:layout_height="35dp"
    android:layout_margin="5dp"
    android:layout_width="100dp"
    android:textColor="#000000"
    android:layout_below="@+id/ratingbar">
   	</Button>
   	
    <Button
    android:id="@+id/favDirectionsButton"
    android:text="Map"
    android:background="@layout/rounded_corner"
    android:layout_height="35dp"
    android:layout_margin="5dp"
    android:layout_width="100dp"
    android:maxHeight="10dp"
    android:textColor="#000000"
    android:layout_below="@+id/ratingbar"
    android:layout_toRightOf="@+id/favContactButton">
    </Button>  	
 	<Button
    android:id="@+id/favDelete"
    android:text="Delete"
    android:textColor="#000000"
    android:background="@layout/rounded_corner"
    android:layout_height="35dp"
    android:layout_margin="5dp"
    android:paddingBottom="5dp"
    android:layout_width="100dp"
    android:maxHeight="10dp"
    android:layout_below="@+id/ratingbar"
    android:layout_toRightOf="@+id/favDirectionsButton">
    </Button>  	
</RelativeLayout>