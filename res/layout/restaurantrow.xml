<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="#F3F3F5"
    android:layout_margin="5dp"
    android:paddingBottom="5dp">
    
    <ImageButton 
        android:id="@+id/add_button"
        android:src="@drawable/plus_one"
        android:layout_width="30dp"
        android:layout_height="30dp" 
        android:layout_marginBottom="6dip"
        android:layout_marginTop="6dip"
        android:layout_marginLeft="6dip"
        android:layout_marginRight="6dip">
 	</ImageButton>   
 	
 	<ImageButton 
        android:id="@+id/fav_button"
        android:layout_width="30dp"
        android:layout_height="30dp"  
        android:layout_marginRight="6dip"
        android:layout_marginTop="6dip"
        android:layout_marginBottom="6dip"
        android:clickable="true"
        android:layout_toRightOf="@+id/add_button">
 	</ImageButton> 
 	<TextView
    android:id="@+id/label"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:typeface="sans"
    android:layout_toRightOf="@+id/fav_button"
    android:textSize="18sp"
    android:textColor="#363535">
    </TextView>
 
 <!--  android:layout_marginTop="36dip"
     android:layout_marginLeft="8dip"-->
   	<TextView
    android:id="@+id/distance_label"
    android:layout_width="40dp"
    android:layout_height="20dp"
    android:maxHeight="10dp"
    android:typeface="sans"
	android:layout_below="@+id/label"
    android:layout_alignParentRight="true"
    android:textSize="12sp"
    android:textColor="#363535">
    </TextView>
    
   <Button
    android:id="@+id/directionsButton"
    android:text="Map"
    android:textColor="#363535"
    android:background="@layout/rounded_corner"
    android:layout_height="35dp"
    android:layout_margin="5dp"
    android:layout_width="100dp"
    android:maxHeight="10dp"
    android:layout_below="@+id/distance_label"
    android:layout_alignParentRight="true"
    android:layout_marginTop="6dip">
    </Button>  	
 
   <Button
    android:id="@+id/contactButton"
    android:text="Call"
    android:textColor="#363535"
    android:background="@layout/rounded_corner"
    android:layout_height="35dp"
    android:layout_margin="5dp"
    android:layout_width="100dp"
    android:layout_marginTop="6dip"
    android:layout_below="@+id/distance_label"
    android:layout_toLeftOf="@+id/directionsButton">
   	</Button>
   	  
</RelativeLayout>