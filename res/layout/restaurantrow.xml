<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="#F3F3F5"
    android:layout_margin="5dp"
    android:paddingBottom="5dp">

	    <ImageButton 
	        android:id="@+id/add_button"
	        android:src="@drawable/plus_one"
	        android:layout_width="30dp"
	        android:layout_height="30dp" 
	        android:layout_marginBottom="6dip"
	        android:layout_marginTop="6dip"
	        android:layout_marginLeft="6dip"
	        android:layout_marginRight="6dip">
	 	</ImageButton>   
	 	
	 	<ImageButton 
	        android:id="@+id/fav_button"
	        android:layout_width="30dp"
	        android:layout_height="30dp"  
	        android:layout_marginRight="6dip"
	        android:layout_marginTop="6dip"
	        android:layout_marginBottom="6dip"
	        android:clickable="true"
	        android:layout_toRightOf="@+id/add_button">
	 	</ImageButton> 
	 	<TextView
		    android:id="@+id/label"
		    android:layout_width="180dp"
		    android:layout_marginTop="6dip"
		    android:layout_height="fill_parent"
		    android:typeface="sans"
		    android:layout_toRightOf="@+id/fav_button"
		    android:textSize="16sp"
		    android:textColor="#363535">
	    </TextView>
	
	
	<TextView
	    android:id="@+id/address_label"
	    android:layout_width="wrap_content"
	    android:layout_height="fill_parent"
	    android:typeface="sans"
	    android:layout_below="@+id/fav_button"
	    android:layout_alignParentLeft="true"
	    android:layout_marginLeft="6dip"
	    android:textSize="12sp"
	    android:textColor="#363535">
    </TextView> 

   	<TextView
	    android:id="@+id/distance_label"
	    android:layout_width="40dp"
	    android:layout_height="20dp"
	    android:maxHeight="10dp"
	    android:typeface="sans"
		android:layout_below="@+id/fav_button"
	    android:layout_alignParentRight="true"
	    android:textSize="12sp"
	    android:layout_marginRight="6dip"
	    android:textColor="#363535">
    </TextView>
 
   <ImageButton
    android:id="@+id/directionsButton"
    android:src="@drawable/map_big"
    android:background="@null"
    android:layout_margin="5dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"    
    android:layout_below="@+id/address_label"
    android:layout_alignParentRight="true"
    android:paddingRight="6dp"
    android:layout_marginTop="6dip">
    </ImageButton>  	
   
  
   <ImageButton
    android:id="@+id/contactButton"
    android:layout_height="wrap_content"    
    android:layout_margin="5dp"
    android:src="@drawable/call_big"
    android:layout_marginRight="10dp"
    android:paddingRight="15dp"
    android:background="@null"
    android:layout_width="wrap_content"
    android:layout_marginTop="6dip"
    android:layout_below="@+id/address_label"
    android:layout_toLeftOf="@+id/directionsButton">
   	</ImageButton>

</RelativeLayout>