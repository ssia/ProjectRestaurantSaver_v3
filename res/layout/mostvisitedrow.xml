<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="#F3F3F5"
    android:layout_margin="5dp"
    android:paddingBottom="5dp">
 
 	<TextView
    android:id="@+id/mVisited_name"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="16sp"
    android:typeface="sans"
    android:layout_marginLeft="6dp"
    android:textColor="#363535">
    </TextView>
    <ImageButton
    android:id="@+id/mVisited_website"
     android:background="@null"
    android:layout_margin="5dp"
    android:src="@drawable/internet_big"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:layout_alignParentRight="true">
   	</ImageButton>
 	<TextView
    android:id="@+id/mVisited_address"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="12sp"
    android:typeface="sans"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="6dp"
    android:layout_below="@+id/mVisited_name"
    android:textColor="#363535">
    </TextView>
    <TextView
    android:id="@+id/noOfTimes"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="16sp"
    android:layout_margin="5dp"
    android:typeface="sans"
    android:layout_marginLeft="6dp"
    android:textColor="#363535"
    android:layout_below="@+id/mVisited_address">
    </TextView>
    <ImageButton
    android:id="@+id/mVisitedContactButton"
    android:layout_height="wrap_content"
    android:src="@drawable/call_big"
    android:paddingRight="5dp"
    android:background="@null"
    android:layout_width="wrap_content"
    android:layout_alignParentRight="true"
    android:layout_below="@+id/noOfTimes">
   	</ImageButton>
   	
    <ImageButton
    android:id="@+id/mVisitedDirectionsButton"
    android:background="@null"
    android:src="@drawable/map_big"
    android:layout_height="wrap_content"
    android:paddingRight="30dp"
    android:layout_width="wrap_content"
    android:layout_below="@+id/noOfTimes"
    android:layout_toLeftOf="@+id/mVisitedContactButton">
    </ImageButton>  	
    <ImageButton
    android:id="@+id/mVisitedDeleteButton"
    android:src="@drawable/delete_big"
    android:background="@null"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:layout_marginTop="-3dp"
    android:layout_alignParentLeft="true"
    android:layout_below="@+id/noOfTimes">
    </ImageButton>  	
</RelativeLayout>