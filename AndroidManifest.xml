<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ProjectRestaurantSaver"
    android:versionCode="1"
    android:versionName="1.0" >
    
    <uses-sdk android:minSdkVersion="14" />
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.CALL_PHONE"/>
   	<uses-permission android:name="android.permission.ACCESS_MOCK_LOCATION" />
   	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
   	
    
    <application
        android:icon="@drawable/restaurantsaver"
        android:label="@string/app_name" 
        android:name=".application.RestaurantApplication"> <!--Class for globally sharing the RestaurantAdapter ArrayList-->
        <activity
            android:label="@string/app_name"
            android:name=".ProjectRestaurantSaver" >
            <intent-filter >
                <action android:name="android.intent.action.MAIN" />
			    <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>  
        <activity
	        android:label="@string/app_name"
	        android:name=".NearbyRestaurantActivity">
        </activity>
        <activity
            android:label="@string/app_name"
            android:name=".MostVisitedActivity">
        </activity>
        <activity
            android:label="@string/app_name"
            android:name=".FavoriteRestaurantActivity">
        </activity>
        <uses-library android:required="true" android:name="com.google.android.maps" />
         <activity android:name="com.example.ProjectRestaurantSaver.ShareOnFacebook" 
             android:label="@string/app_name"
             android:screenOrientation="portrait" 
             android:theme="@android:style/Theme.Dialog"/>
    </application>
</manifest>